{
  "name": "guilty-game",
  "version": "1.0.0",
  "description": "A daily detective mystery game where players identify culprits by analyzing suspect traits and patterns using information theory and logical deduction",
  "main": "server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "echo 'No build step required for this project'",
    "prestart": "node --version",
    "postinstall": "echo 'Thank you for installing GUILTY!'",
    "validate": "npm run lint:fix && npm run format",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "game",
    "mystery",
    "detective",
    "puzzle",
    "deduction",
    "wordle-like",
    "daily-game",
    "logic-game",
    "information-theory",
    "web-game",
    "browser-game",
    "express",
    "nodejs",
    "javascript",
    "html5-game"
  ],
  "author": {
    "name": "Your Name",
    "email": "your.email@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mystery-game/Witness-Game-Enhanced.git"
  },
  "bugs": {
    "url": "https://github.com/mystery-game/Witness-Game-Enhanced/issues",
    "email": "bugs@guiltygame.com"
  },
  "homepage": "https://github.com/mystery-game/Witness-Game-Enhanced#readme",
  "private": false,
  "preferGlobal": false,
  "config": {
    "port": 3000
  },
  "nodemonConfig": {
    "ignore": [
      "*.test.js",
      "node_modules/*"
    ],
    "delay": "2500",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn"
    }
  },
  "browserslist": [
    "last 2 versions",
    "> 1%",
    "not dead"
  ],
  "files": [
    "server.js",
    "index.html",
    "public/",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs",
    "test": "test"
  }
}
